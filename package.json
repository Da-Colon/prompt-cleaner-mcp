{
  "name": "mcp-retoucher",
  "version": "0.1.0",
  "description": "Retouch+Forward MCP server",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "bin": {
    "mcp-retoucher": "./dist/server.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "tsc -p .",
    "start": "node dist/server.js",
    "test": "vitest run",
    "inspect": "mcp-inspector tsx src/server.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "probe": "tsx scripts/mcp_health.ts",
    "demo": "tsx scripts/use_tools.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.4.1",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "tsx": "^4.16.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.39.0",
    "vitest": "^1.6.0"
  }
}
